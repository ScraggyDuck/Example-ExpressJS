extends ../layouts/common
block contain
    h1 User list
    a(href="/users/create") New
    form(action="/users/search", method="GET")
        input(type="text", name="q", id="searchBox", value= val)
        button Search
    ul
        each user in users
            li
                span= user.name
                span &nbsp;
                a(href="/users/" + user.id) View